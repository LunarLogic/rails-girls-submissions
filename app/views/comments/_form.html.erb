<%= form_for([submission, comment], url: comments_path(filter, submission)) do |f| %>
  <div class="form-field form-field-close">
    <%= f.text_area :body, placeholder: "Your Comment", class: "textarea-small", required: true, maxLength: 140 %>
  </div>
  <div>
    <%= f.submit "Comment", class: "btn-small btn-right-align" %>
  </div>
<% end %>
