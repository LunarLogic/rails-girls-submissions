<%= f.fields_for :answers, answer do |a| %>
  <fieldset class="form-field form-field-collection">
    <legend><%= question.text %></legend>
    <%= hidden_field_tag("submission[answers_attributes][#{a.index}][question_id]", question.id) %>
    <div>
      <%= a.radio_button :value, :not_at_all, required: true %>
      <%= a.label :value, "Not at all", value: "not_at_all" %>
    </div>
    <div>
      <%= a.radio_button :value, :a_little_bit, required: true %>
      <%= a.label :value, "A little bit", value: "a_little_bit" %>
    </div>
    <div>
      <%= a.radio_button :value, :ok, required: true %>
      <%= a.label :value, "OK", value: "ok" %>
    </div>
    <div>
      <%= a.radio_button :value, :well, required: true %>
      <%= a.label :value, "Well", value: "well" %>
    </div>
    </fieldset>
  </fieldset>
<% end %>
