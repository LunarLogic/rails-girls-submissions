<%= render 'layouts/header.html.erb' %>

<h1>Rejected</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Age</th>
      <th>Registration date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submissions_rejected.each do |submission| %>
      <tr>
        <td><%= submission.full_name %></td>
        <td><%= submission.age %></td>
        <td><%= submission.created_at %></td>
        <td><%= link_to 'Show', submission %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
