<%= form_for(settings, url: settings_update_path, method: :put) do |f| %>
  <div class="form-field">
    <%= f.label :accepted_threshold %>
    <%= f.number_field :accepted_threshold %>
  </div>
  <div class="form-field">
    <%= f.label :waitlist_threshold %>
    <%= f.number_field :waitlist_threshold %>
  </div>
  <div class="form-field">
    <%= f.label :required_rates_num %>
    <%= f.number_field :required_rates_num %>
  </div>
  <%= f.submit "Save settings" %>
<% end  %>
