<h1 class="form-header">Settings</h1>

<% if settings.errors.present? %>
  <div class="form-error-box">
    <h2 class="form-error-header">
        Some settings need to be corrected
      </h2>
    <ul class="form-error-list">
      <% settings.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(settings, url: settings_update_path, method: :put) do |f| %>
  <div class="form-field">
    <%= f.label "The \"Coming soon!\" page is displayed since" %>
    <%= f.date_field :beginning_of_preparation_period, required: true %>
  </div>
  <div class="form-field">
    <%= f.label "The registration starts on" %>
    <%= f.date_field :beginning_of_registration_period, required: true %>
  </div>
  <div class="form-field">
    <%= f.label "The registration ends by the end of" %>
    <%= f.date_field :end_of_registration_period, required: true %>
  </div>
  <div class="form-field">
    <%= f.label "The event starts on" %>
    <%= f.date_field :event_start_date, required: true %>
  </div>
  <div class="form-field">
    <%= f.label "The event ends on" %>
    <%= f.date_field :event_end_date, required: true %>
  </div>
  <div class="form-field">
    <%= f.label :event_url %>
    <span class="event-url-prefix">http://</span>
    <%= f.text_field :event_url, class: "event-url-field", required: true %>
  </div>
  <div class="form-field">
    <%= f.label :event_venue %>
    <%= f.text_field :event_venue %>
  </div>
  <div class="form-field">
    <%= f.label :contact_email %>
    <%# <%= f.email_field :contact_email, required: true %1> %>
    <%= f.email_field :contact_email %>
  </div>
  <div class="form-field">
    <%= f.label "Number of participants" %>
    <%= f.number_field :available_spots, min: 0, required: true %>
  </div>
  <div class="form-field">
    <%= f.label "How many people need to rate each submission" %>
    <%= f.number_field :required_rates_num, min: 0, required: true %>
  </div>
  <div class="form-field">
    <%= f.label "How many days applicants have to confirm an invitation" %>
    <%= f.number_field :days_to_confirm_invitation, min: 0, required: true %>
  </div>
  <div class="form-field">
    <%= f.submit "Save settings", class: "btn-small" %>
  </div>
<% end  %>
