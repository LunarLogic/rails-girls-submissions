<%= render 'layouts/header' %>
<p id="notice"><%= notice %></p>

<p>
  <strong>ID:</strong>
  <%= @submission.id %>
</p>

<p>
  <strong>Full name:</strong>
  <%= @submission.full_name %>
</p>

<p>
  <strong>Status:</strong>
  <%= @submission.status %>
</p>

<p>
  <strong>Email:</strong>
  <%= @submission.email %>
</p>

<p>
  <strong>Age:</strong>
  <%= @submission.age %>
</p>

