<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Submission</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.submission %></td>
        <td><%= comment.user %></td>
        <td><%= link_to 'Show', submission_comment_path(comment.submission_id, comment.id) %></td>
        <td><%= link_to 'Edit', edit_submission_comment_path(comment.submission_id, comment.id) %></td>
        <td><%= link_to 'Destroy', submission_comment_path(comment.submission_id, comment.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_submission_comment_path %>
