<%= render 'filters' %>

<% if submission_presenters.empty? %>
  <%= render 'empty_table', message: "No rated submissions to show" %>
<% else %>
  <%= link_to "Send emails", send_invitation_emails_path,
    method: :post,
    data: { confirm: "From now on invitation and reminder emails will be sent to participants from the top of the list.\nFor details, see the apps's README.\n\nDo you want to continue?" },
    class: "btn btn-small btn-emails"
  %>
  <%= render 'list',
    submission_presenters: submission_presenters,
    filter: filter,
    columns: [:full_name, :email, :average_rate, :invitation_status, :adult]
  %>
<% end %>
